<!-- res/drawable/button_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние нажатия -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#24778D" />
            <corners android:radius="2dp" />
            <stroke
                    android:width="1dp"
                    android:color="#2fa2c1" />
        </shape>
    </item>

    <!-- Состояние по умолчанию -->
    <item>
        <shape>
            <solid android:color="#2fa2c1" />
            <corners android:radius="2dp" />
            <stroke
                    android:width="1dp"
                    android:color="#24778D" />
        </shape>
    </item>
</selector>
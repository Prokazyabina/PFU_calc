<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние с фокусом -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Нижняя полоска (утолщенная) -->
            <item>
                <shape>
                    <solid android:color="@android:color/transparent"/>
                    <stroke
                            android:width="2dp"
                            android:color="#BDBDBD"/> <!-- Цвет полоски -->
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Дефолтное состояние -->
    <item>
        <layer-list>
            <!-- Нижняя полоска (обычная) -->
            <item>
                <shape>
                    <solid android:color="@android:color/transparent"/>
                    <stroke
                            android:width="1dp"
                            android:color="#BDBDBD"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>